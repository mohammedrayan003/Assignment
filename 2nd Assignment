#include <iostream>
#include <string>

using namespace std;

string reverseString(string str) {
  int n = str.length();
  string reversedStr = "";

  for (int i = n - 1; i >= 0; i--) {
    reversedStr += str[i];
  }

  return reversedStr;
}

int main() {
  string str;
  cout << "Enter a string: ";
  cin >> str;

  string reversedStr = reverseString(str);
  cout << "The reversed string is: " << reversedStr << endl;

  return 0;
}
